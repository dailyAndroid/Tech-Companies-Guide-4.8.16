<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hwhong.techcompguide.MainActivity"
    android:background="#FCE4EC">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/frag1"
        android:name="com.example.hwhong.techcompguide.FragmentOne"
        tools:layout="@layout/fragment_fragment_one"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <fragment
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/frag2"
        android:layout_below="@+id/frag1"
        android:layout_alignParentLeft="true"
        android:name="com.example.hwhong.techcompguide.FragmentTwo"
        tools:layout="@layout/fragment_fragment_two"
        android:layout_alignParentBottom="true" />

</RelativeLayout>